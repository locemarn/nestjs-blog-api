    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.6.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "graphql": "^16.10.0",
    "graphql-tools": "^9.0.18",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
